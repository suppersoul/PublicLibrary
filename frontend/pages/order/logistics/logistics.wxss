/* pages/order/logistics/logistics.wxss */

.logistics-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 订单信息 */
.order-info {
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.order-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-summary {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.order-status, .order-amount {
  display: flex;
  align-items: center;
}

.status-label, .amount-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.status-text, .amount-text {
  font-size: 26rpx;
  font-weight: bold;
}

.status-text.pending {
  color: #ff9800;
}

.status-text.paid {
  color: #2196f3;
}

.status-text.shipped {
  color: #4caf50;
}

.status-text.delivered {
  color: #4caf50;
}

.status-text.completed {
  color: #4caf50;
}

.status-text.cancelled {
  color: #f44336;
}

.amount-text {
  color: #ff6b35;
}

/* 物流信息 */
.logistics-section {
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

/* 物流公司信息 */
.company-info {
  padding: 20rpx 30rpx;
}

.company-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.company-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.copy-btn, .call-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  min-width: 80rpx;
}

.copy-btn {
  background: #e3f2fd;
  color: #2196f3;
}

.call-btn {
  background: #e8f5e8;
  color: #4caf50;
}

/* 物流轨迹 */
.tracking-timeline {
  padding: 20rpx 30rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.timeline-list {
  position: relative;
}

.timeline-list::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #e0e0e0;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  position: relative;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e0e0e0;
  border: 4rpx solid white;
  box-shadow: 0 0 0 2rpx #e0e0e0;
}

.dot.active {
  background: #4caf50;
  box-shadow: 0 0 0 2rpx #4caf50;
}

.timeline-content {
  flex: 1;
  margin-left: 20rpx;
  padding-bottom: 10rpx;
}

.track-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.track-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.track-location {
  font-size: 24rpx;
  color: #666;
}

.timeline-item.latest .track-desc {
  font-weight: bold;
  color: #4caf50;
}

/* 无物流信息 */
.no-logistics {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 30rpx;
  text-align: center;
}

.no-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.no-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.no-desc {
  font-size: 24rpx;
  color: #666;
}

/* 收货地址 */
.address-section {
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.address-info {
  padding: 20rpx 30rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.receiver-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.receiver-phone {
  font-size: 26rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* 商品信息 */
.products-section {
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 22rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 4rpx;
}

.quantity {
  font-size: 24rpx;
  color: #666;
  margin-left: 16rpx;
}

/* 操作按钮 */
.action-section {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.primary {
  background: #ff6b35;
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #ff6b35;
  border: 2rpx solid #ff6b35;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}