/* pages/order/list/list.wxss */

.order-list-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 订单状态标签 */
.status-tabs {
  display: flex;
  background: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff6b35;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff6b35;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.order-info {
  flex: 1;
}

.order-no {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
}

.order-status.pending {
  color: #ff6b35;
}

.order-status.paid {
  color: #ffa366;
}

.order-status.shipped {
  color: #4CAF50;
}

.order-status.delivered {
  color: #2196F3;
}

.order-status.completed {
  color: #666;
}

.order-status.cancelled {
  color: #999;
}

/* 订单商品 */
.order-products {
  padding: 30rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 22rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 4rpx;
}

.quantity {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 订单金额 */
.order-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-top: 1px solid #f0f0f0;
}

.amount-label {
  font-size: 26rpx;
  color: #666;
}

.amount-value {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
}

/* 订单操作 */
.order-actions {
  padding: 20rpx 30rpx;
  border-top: 1px solid #f0f0f0;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
  background: white;
  color: #666;
}

.action-btn.primary {
  background: #ff6b35;
  color: white;
  border-color: #ff6b35;
}

.action-btn.cancel {
  color: #999;
  border-color: #e0e0e0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 弹窗样式 */
.cancel-modal, .delete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-content, .delete-content {
  background: white;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 40rpx;
}

.cancel-title, .delete-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.cancel-reason {
  margin-bottom: 30rpx;
}

.reason-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.reason-input {
  width: 100%;
  height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.delete-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.cancel-actions, .delete-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .delete-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn, .delete-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: #ff6b35;
  color: white;
}