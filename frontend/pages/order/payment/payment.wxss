/* pages/order/payment/payment.wxss */

.payment-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 支付金额 */
.payment-amount {
  background: white;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.amount-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price {
  font-size: 72rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 8rpx;
}

/* 支付方式 */
.payment-methods {
  background: white;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.method-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.method-item:last-child {
  border-bottom: none;
}

.method-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-details {
  flex: 1;
}

.method-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.method-radio {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio.checked {
  border-color: #ff6b35;
  background: #ff6b35;
}

.radio.checked::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
}

/* 订单信息 */
.order-info {
  background: white;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.info-value.highlight {
  color: #ff6b35;
  font-weight: bold;
}

/* 支付按钮 */
.payment-actions {
  padding: 40rpx;
}

.pay-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.pay-btn.active {
  background: #ff6b35;
  color: white;
}

.pay-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

/* 支付提示 */
.payment-tips {
  padding: 0 40rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 24rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 弹窗样式 */
.confirm-modal, .result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-content, .result-content {
  background: white;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.confirm-title, .result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.confirm-amount {
  margin-bottom: 20rpx;
}

.confirm-method {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-icon.success {
  color: #4CAF50;
}

.result-icon.error {
  color: #f44336;
}

.result-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.confirm-actions, .result-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn, .result-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn, .result-btn {
  background: #ff6b35;
  color: white;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}