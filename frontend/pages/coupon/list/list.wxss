/* pages/coupon/list/list.wxss */

.coupon-container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 状态切换标签 */
.status-tabs {
  display: flex;
  background: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #ff6b35;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff6b35;
  border-radius: 2rpx;
}

/* 优惠券列表 */
.coupon-list {
  padding: 0 20rpx;
}

.coupon-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  position: relative;
}

.coupon-item.used,
.coupon-item.expired {
  opacity: 0.6;
}

/* 优惠券左侧 */
.coupon-left {
  background: linear-gradient(135deg, #ff6b35, #ff8c42);
  color: white;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 200rpx;
  position: relative;
}

.coupon-left::after {
  content: '';
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.coupon-amount {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.currency {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.amount {
  font-size: 48rpx;
  font-weight: bold;
}

.coupon-type {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.coupon-condition {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 优惠券右侧 */
.coupon-right {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.coupon-validity {
  margin-bottom: 16rpx;
}

.validity-label {
  font-size: 24rpx;
  color: #999;
}

.validity-date {
  font-size: 24rpx;
  color: #666;
}

.coupon-usage {
  margin-bottom: 16rpx;
}

.usage-label {
  font-size: 24rpx;
  color: #999;
}

.usage-text {
  font-size: 24rpx;
  color: #666;
}

.status-tag {
  margin-bottom: 16rpx;
}

.status-text {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.status-text.available {
  background: #e8f5e8;
  color: #4caf50;
}

.status-text.used {
  background: #f0f0f0;
  color: #999;
}

.status-text.expired {
  background: #ffeaea;
  color: #f44336;
}

.coupon-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  border: none;
}

.use-btn {
  background: #ff6b35;
  color: white;
}

/* 优惠券状态遮罩 */
.coupon-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.mask-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
  transform: rotate(-15deg);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 40rpx;
  background: white;
  border-radius: 32rpx;
  display: inline-block;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 使用弹窗 */
.use-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.use-content {
  background: white;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 40rpx;
}

.use-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.use-info {
  margin-bottom: 30rpx;
}

.use-info .coupon-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.use-info .coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.use-info .coupon-amount {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  display: block;
}

.use-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: #ff6b35;
  color: white;
}