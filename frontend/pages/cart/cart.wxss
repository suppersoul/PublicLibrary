/* pages/cart/cart.wxss */

.cart-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 140rpx; /* 为底部结算栏留出空间 */
}

/* 购物车内容 */
.cart-content {
  padding: 20rpx 0;
}

.cart-items {
  margin-bottom: 20rpx;
}

.cart-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.item-checkbox {
  margin-top: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.item-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.item-price {
  margin-top: auto;
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: bold;
}

.price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 4rpx;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  min-height: 160rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 0;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background: white;
  border: none;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-btn.decrease {
  border-right: 2rpx solid #e0e0e0;
}

.quantity-btn.increase {
  border-left: 2rpx solid #e0e0e0;
}

.quantity-btn[disabled] {
  color: #ccc;
  background: #f5f5f5;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background: white;
}

.delete-btn {
  background: none;
  border: none;
  padding: 10rpx;
}

.delete-icon {
  font-size: 32rpx;
  color: #999;
}

/* 推荐商品 */
.recommend-section {
  background: white;
  margin-bottom: 20rpx;
}

.recommend-title {
  padding: 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.recommend-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.recommend-list {
  padding: 30rpx;
  white-space: nowrap;
}

.recommend-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.recommend-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.recommend-name {
  font-size: 26rpx;
  color: #333;
  line-height: 1.3;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.recommend-price .currency {
  font-size: 22rpx;
}

.recommend-price .price {
  font-size: 28rpx;
}

.add-cart-btn {
  width: 100%;
  height: 60rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  background: #ff6b35;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 底部结算栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.checkout-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-all-checkbox {
  transform: scale(0.8);
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
}

.price-info {
  flex: 1;
  text-align: right;
}

.selected-count {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.total-price {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  margin-bottom: 4rpx;
}

.label {
  font-size: 26rpx;
  color: #333;
}

.total-price .currency {
  font-size: 28rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 8rpx;
}

.total-price .price {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-left: 4rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.checkout-btn.active {
  background: #ff6b35;
  color: white;
}

.checkout-btn.disabled {
  background: #f0f0f0;
  color: #ccc;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #666;
}

/* 弹窗样式 */
.delete-modal, .clear-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-content, .clear-content {
  background: white;
  width: 600rpx;
  border-radius: 16rpx;
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.delete-title, .clear-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.delete-message, .clear-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.delete-actions, .clear-actions {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: #ff6b35;
  color: white;
}